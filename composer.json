{
    "name": "rancoud/application",
    "description": "Application package",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastien Rancoud",
            "email": "contact@rancoud.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Rancoud\\Application\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests"
        }
    },
    "require": {
        "php": ">=8.4.0",
        "rancoud/environment": "^2.0",
        "rancoud/router": "^4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^12.0",
        "rancoud/database": "^6.0 || ^7.0",
        "rancoud/session": "^5.0"
    },
    "scripts": {
        "ci": [
            "@lint",
            "@test"
        ],
        "lint": [
            "php-cs-fixer fix -vvv"
        ],
        "test": [
            "phpunit --colors --coverage-html ./coverage"
        ]
    }
}
