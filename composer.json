{
    "name": "rancoud/application",
    "description": "Application package",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastien Rancoud",
            "email": "contact@rancoud.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Rancoud\\Application\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.4.0",
        "rancoud/environment": "^2.0",
        "rancoud/router": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.1",
        "rancoud/database": "^5.0 || ^6.0",
        "rancoud/session": "^3.0 || ^4.0 || ^5.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "ci": [
            "@lint",
            "@test"
        ],
        "lint": [
            "phpcbf",
            "phpcs",
            "php-cs-fixer fix"
        ],
        "test": [
            "phpunit --colors --coverage-html ./coverage"
        ]
    }
}
